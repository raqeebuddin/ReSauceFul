@model reSauceFul.Models.Recipe

@{
    ViewBag.Title = "ReviewRecipe";
}

<h2>ReviewRecipe</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Reviews)
        </dt>

        <dd>
            @foreach (reSauceFul.Models.Review review in Model.Reviews)
            {
                <p>id: </p>@review.Id
                <p>commment: </p>@review.Comment
                <p>recipe ID from Recipe Table: </p>@review.Recipe.Id
                <p>recipe name from recipe table</p>@review.Recipe.Name
                <p>userid: </p>@review.UserId
                <p>user Name from User Table: </p>@review.User.Name
                <p>user Name from User Table: </p>@review.User.Id
            }
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Back to Search", "Index", null, new { @class = "btn btn-success" })
</p>

